    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: rgb(0, 46, 0);">
        <div class="container-fluid">
            <a class="navbar-brand" href="/" style="margin-right:15em">ShopSense</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <form class="d-flex" style="width:40vw;">
                    <input class="form-control me-2 w-100" type="search" placeholder="Search" aria-label="Search" style="border-radius:2em">
