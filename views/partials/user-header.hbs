                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item" style="margin:0 0.5em 0 2em">
                        <a class="nav-link" href="#"><i class="bi bi-geo-alt-fill"></i> Location</a>
                    </li>
                    {{#if user}}
