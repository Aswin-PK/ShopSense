<section>
    <div class="container" style="margin-top: 5em;">
        <div class="addProduct" style="bottom: 2em;right:1em;position:fixed;">
            <a href="admin/add-products" class="btn btn-success ml-auto" style="height: 5em;width:5em;display:grid;place-items:center;border-radius: 50%;"><i class="bi bi-plus" style="font-size: 2.5em;"></i></a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col" style="width: 7em;">Sl.No</th>
                    <th scope="col">Image</th>
                    <th scope="col">Product name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <th><img src="/images/product-images/{{this._id}}.png" alt="" style="width:50px;height:60px"></th>
                        <td>{{this.name}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.price}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>